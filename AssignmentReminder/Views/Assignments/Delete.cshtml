@model AssignmentReminder.Models.Assignment

<h2>Delete Assignment</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Assignment</h4>
    <dl class="row">
        <dt class="col-sm-2">Course Code</dt>
        <dd class="col-sm-10">@Model.CourseCode</dd>
        <dt class="col-sm-2">Course Name</dt>
        <dd class="col-sm-10">@Model.CourseName</dd>
        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate.ToString("g")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger delete-btn">Delete</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
